{
  "builders": [
    {
      "changes": [
        "ENTRYPOINT [\"/sbin/my_init\"]",
        "EXPOSE 80"
      ],
      "commit": true,
      "image": "{{user `passenger_image`}}:{{user `ruby_version`}}",
      "type": "docker"
    }
  ],
  "description": "Create mjonuschat/baseimage Docker image",
  "post-processors": [
    [
      {
        "repository": "mjonuschat/rails-ruby26",
        "tag": "latest",
        "type": "docker-tag"
      }
    ]
  ],
  "provisioners": [
    {
      "cookbook_paths": [
        "cookbooks"
      ],
      "execute_command": "{{if .Sudo}}sudo {{end}}chef-solo --chef-license accept-silent --no-color -c {{.ConfigPath}} -j {{.JsonPath}}",
      "prevent_sudo": true,
      "run_list": [
        "container_rails"
      ],
      "skip_install": false,
      "type": "chef-solo"
    },
    {
      "scripts": [
        "scripts/remove-chef.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "passenger_image": "mjonuschat/passenger-ruby26",
    "ruby_version": "2.6.4"
  }
}
