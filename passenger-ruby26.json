{
  "builders": [
    {
      "changes": [
        "ENTRYPOINT [\"/sbin/my_init\"]"
      ],
      "commit": true,
      "image": "mjonuschat/baseimage:bionic",
      "type": "docker"
    }
  ],
  "description": "Create mjonuschat/baseimage Docker image",
  "post-processors": [
    [
      {
        "repository": "mjonuschat/passenger-ruby26",
        "tag": "latest",
        "type": "docker-tag"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/prepare.sh"
      ],
      "type": "shell"
    },
    {
      "cookbook_paths": [
        "cookbooks"
      ],
      "execute_command": "{{if .Sudo}}sudo {{end}}chef-solo --chef-license accept-silent --no-color -c {{.ConfigPath}} -j {{.JsonPath}}",
      "json": {
        "container_passenger": {
          "node": {
            "enabled": true,
            "version": "node_10.x"
          },
          "ruby": {
            "enabled": true,
            "versions": [
              "{{user `ruby_version`}}"
            ]
          }
        }
      },
      "prevent_sudo": true,
      "run_list": [
        "container_passenger"
      ],
      "skip_install": false,
      "type": "chef-solo"
    },
    {
      "scripts": [
        "scripts/remove-chef.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "ruby_version": "2.6.5"
  }
}
