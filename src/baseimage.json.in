{
  "builders": [
    {
      "changes": [
        "ENTRYPOINT [\"/sbin/my_init\"]",
        "ENV DEBIAN_FRONTEND teletype",
        "ENV LANG en_US.UTF-8",
        "ENV LANGUAGE en_US:en",
        "ENV LC_ALL en_US.UTF-8"
      ],
      "commit": true,
      "image": "ubuntu:@UBUNTU_RELEASE_NAME@",
      "type": "docker"
    }
  ],
  "description": "Create mjonuschat/baseimage Docker image",
  "post-processors": [
    [
      {
        "repository": "mjonuschat/baseimage",
        "tag": "@UBUNTU_RELEASE_NAME@",
        "type": "docker-tag"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/prepare.sh"
      ],
      "type": "shell"
    },
    {
      "cookbook_paths": [
        "cookbooks"
      ],
      "chef_license": "accept-silent",
      "version": "16.6",
      "prevent_sudo": true,
      "run_list": [
        "container_baseimage"
      ],
      "skip_install": false,
      "type": "chef-solo"
    },
    {
      "scripts": [
        "scripts/remove-chef.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ]
}

