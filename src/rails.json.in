{
  "builders": [
    {
      "changes": [
        "ENTRYPOINT [\"/sbin/my_init\"]",
        "EXPOSE 80"
      ],
      "commit": true,
      "image": "mjonuschat/passenger-ruby@RUBY_VERSION_ID@:@RUBY_VERSION_FULL@-@UBUNTU_RELEASE_NAME@",
      "type": "docker",
      "pull": false
    }
  ],
  "description": "Create mjonuschat/baseimage Docker image",
  "post-processors": [
    [
      {
        "repository": "mjonuschat/rails-ruby@RUBY_VERSION_ID@",
        "tag": "@RUBY_VERSION_FULL@-@UBUNTU_RELEASE_NAME@",
        "type": "docker-tag"
      }
    ]
  ],
  "provisioners": [
    {
      "cookbook_paths": [
        "cookbooks"
      ],
      "execute_command": "{{if .Sudo}}sudo {{end}}chef-solo --chef-license accept-silent --no-color -c {{.ConfigPath}} -j {{.JsonPath}}",
      "prevent_sudo": true,
      "run_list": [
        "container_rails"
      ],
      "skip_install": false,
      "type": "chef-solo"
    },
    {
      "scripts": [
        "scripts/remove-chef.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "ruby_version": "@RUBY_VERSION_FULL@"
  }
}
