{
  "builders": [
    {
      "changes": [
        "ENTRYPOINT [\"/sbin/my_init\"]"
      ],
      "commit": true,
      "image": "mjonuschat/baseimage:@UBUNTU_RELEASE_NAME@",
      "type": "docker",
      "pull": false
    }
  ],
  "description": "Create mjonuschat/baseimage Docker image",
  "post-processors": [
    [
      {
        "repository": "mjonuschat/passenger-ruby@RUBY_VERSION_ID@",
        "tag": "@RUBY_VERSION_FULL@-@UBUNTU_RELEASE_NAME@",
        "type": "docker-tag"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/prepare.sh"
      ],
      "type": "shell"
    },
    {
      "cookbook_paths": [
        "cookbooks"
      ],
      "execute_command": "{{if .Sudo}}sudo {{end}}chef-solo --chef-license accept-silent --no-color -c {{.ConfigPath}} -j {{.JsonPath}}",
      "json": {
        "container_passenger": {
          "node": {
            "enabled": true,
            "version": "node_12.x"
          },
          "ruby": {
            "enabled": true,
            "versions": [
              "{{user `ruby_version`}}"
            ]
          }
        }
      },
      "prevent_sudo": true,
      "run_list": [
        "container_passenger"
      ],
      "skip_install": false,
      "type": "chef-solo"
    },
    {
      "scripts": [
        "scripts/remove-chef.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "ruby_version": "@RUBY_VERSION_FULL@"
  }
}
