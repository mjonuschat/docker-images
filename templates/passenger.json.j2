{
  "builders": [
    {
      "changes": [
        "ENTRYPOINT [\"/sbin/my_init\"]"
      ],
      "commit": true,
      "image": "{{ image }}",
      "type": "docker",
      "run_command": ["-d", "-i", "-t", "--network=host", "--", "{{ '{{.Image}}' }}"],
      "pull": false
    }
  ],
  "description": "Create mjonuschat/baseimage Docker image",
  "post-processors": [
    [
      {
        "repository": "{{ repository }}",
        "tag": "{{ tag }}",
        "type": "docker-tag"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/prepare.sh"
      ],
      "type": "shell"
    },
    {
      "cookbook_paths": [
        "cookbooks"
      ],
      "chef_license": "accept-silent",
      "version": "16.6",
      "json": {
        "container_passenger": {
          "node": {
            "enabled": true,
            "version": "node_12.x"
          },
          "ruby": {
            "enabled": true,
            "versions": [
              "{{ '{{ user `ruby_version`}}' }}"
            ]
          }
        }
      },
      "prevent_sudo": true,
      "run_list": [
        "container_passenger"
      ],
      "skip_install": false,
      "type": "chef-solo"
    },
    {
      "scripts": [
        "scripts/remove-chef.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "ruby_version": "{{ ruby_version }}"
  }
}
